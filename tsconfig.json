{
  "compilerOptions": {   
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build/dist",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules", 
    "build", 
    "scripts", 
    "acceptance-tests", 
    "webpack", 
    "jest", 
    "src/setupTests.ts"
  ],
  "types": ["typePatches"]
}